swiper{
  height: 380rpx;
}
swiper .image{
  height: 100%;
}
.categories{
display: flex;
flex-wrap: wrap;
 border-top: 1px solid #eee;
  border-left: 1px solid #eee;
}
.category{
  display: flex;
  width: 33.333%;
  flex-direction: column;
  align-items: center;
  height: 200rpx;
  justify-content: center;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
  border-right: 1px solid #eee;
}
.category image{
  width: 30%;
  height: 80rpx;
  padding-bottom: 10rpx;
}
.category text{
  font-size: 12px;
  color: #666;
}
